{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ course.nom }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ course.details }}</td>
            </tr>
            <tr>
                <th>DateDeDebut</th>
                <td>{{ course.dateDeDebut ? course.dateDeDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateDeFin</th>
                <td>{{ course.dateDeFin ? course.dateDeFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ course.duree }}</td>
            </tr>
            <tr>
                <th>DateLimiteInscription</th>
                <td>{{ course.dateLimiteInscription ? course.dateLimiteInscription|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ course.categorie }}</td>
            </tr>
            <tr>
                <th>BackgroundImg</th>
                <td>{{ course.backgroundImg }}</td>
            </tr>
            <tr>
                <th>PosterImg</th>
                <td>{{ course.posterImg }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ course.status }}</td>
            </tr>
        </tbody>
    </table>

